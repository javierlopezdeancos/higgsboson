{
  "extends": ["stylelint-config-standard", "stylelint-prettier/recommended"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extend"]
      }
    ],
    "selector-class-pattern": null,
    "custom-property-pattern": null
  },
  "plugins": ["stylelint-use-nesting"],
  "ignoreFiles": ["**/*.html"]
}
