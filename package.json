{
  "name": "higgsboson",
  "version": "0.1.0",
  "description": "Css classes to style native components.",
  "main": "dist/higgsboson.min.css",
  "scripts": {
    "build": "cross-env NODE_ENV=production npx postcss ./src/theme/index.css --config ./postcss.config.js --output ./dist/higgsboson.min.css",
    "build:watch": "npx postcss ./src/theme/index.css --config ./postcss.dev.js --output ./dist/higgsboson.css --verbose --watch",
    "lint:check": "stylelint-config-prettier-check",
    "format": "npx prettier --check .",
    "format:fix" : "npx prettier --write .",
    "lint:fix": "npx stylelint --fix \"src/**/*.css\"",
    "lint": "npx stylelint \"src/**/*.css\"",
    "start": "lite-server",
    "prepare": "husky install",
    "pre-push": "npm run lint"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "cssnano-preset-advanced": "^5.3.9",
    "husky": "^8.0.0",
    "lite-server": "^2.6.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-copy-assets": "^0.3.1",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^10.2.0",
    "postcss-preset-env": "^7.8.3",
    "prettier": "2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-use-nesting": "^4.0.0"
  }
}
