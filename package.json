{
  "name": "higgsboson",
  "version": "0.1.0",
  "license": "gpl-3.0",
  "author": {
    "name": "Javier Lopez de Ancos",
    "email": "javierlopezdeancos@outlook.com",
    "url": "https://javierlopezdeancos.dev/"
  },
  "description": "Css classes to style native components.",
  "main": "dist/higgsboson.min.css",
  "workspaces": [
    "./themes/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production npx postcss ./src/theme/index.css --config ./postcss.config.js --output ./dist/higgsboson.min.css",
    "build:watch": "npx postcss ./src/theme/index.css --config ./postcss.config.js --output ./dist/higgsboson.css --verbose --watch",
    "format": "npx stylelint --fix \"src/**/*.css\"",
    "lint": "npx stylelint \"src/**/*.css\"",
    "start": "lite-server",
    "prepare": "husky install",
    "pre-push": "npm run lint",
    "deps:update": "npx npm-check-updates -u",
    "deps:check": "npx depcheck",
    "deps:remove": "npx npkill"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.0",
    "cssnano-preset-advanced": "^5.3.9",
    "husky": "^8.0.3",
    "lite-server": "^2.6.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-copy-assets": "^0.3.1",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^10.2.0",
    "postcss-preset-env": "^7.8.3",
    "postcss-reporter": "^7.0.5",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-nesting": "^4.0.0"
  }
}
